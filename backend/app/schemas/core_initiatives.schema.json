{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "minItems": 4,
  "maxItems": 4,
  "items": {
    "type": "object",
    "required": ["category_id", "title", "why_now", "steps", "how_to_measure", "assumptions", "confidence_label"],
    "properties": {
      "category_id": {
        "type": "string"
      },
      "title": {
        "type": "string"
      },
      "why_now": {
        "type": "string"
      },
      "steps": {
        "type": "array",
        "minItems": 3,
        "maxItems": 7,
        "items": {
          "type": "string"
        }
      },
      "how_to_measure": {
        "type": "array",
        "minItems": 2,
        "maxItems": 5,
        "items": {
          "type": "string"
        }
      },
      "assumptions": {
        "type": "array",
        "minItems": 0,
        "maxItems": 4,
        "items": {
          "type": "string"
        }
      },
      "confidence_label": {
        "type": "string",
        "enum": ["LOW", "MEDIUM", "HIGH"]
      }
    }
  }
}
