{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "minItems": 2,
  "maxItems": 2,
  "items": {
    "type": "object",
    "required": ["title", "why_this_came_up", "why_speculative", "test_plan", "stop_conditions", "how_to_measure", "confidence_label"],
    "properties": {
      "title": {
        "type": "string"
      },
      "why_this_came_up": {
        "type": "string"
      },
      "why_speculative": {
        "type": "string"
      },
      "test_plan": {
        "type": "array",
        "minItems": 3,
        "maxItems": 6
      },
      "stop_conditions": {
        "type": "array",
        "minItems": 1,
        "maxItems": 3
      },
      "how_to_measure": {
        "type": "array",
        "minItems": 2,
        "maxItems": 5
      },
      "confidence_label": {
        "type": "string",
        "enum": ["LOW"]
      }
    }
  }
}
